@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Contact";
}

<div class="container-fluid">
    <h2>@Localizer["Contact"]</h2>
    <div class="row mt-4">
        <div class="col-6">
            <form>
                <div class="form-group">
                    <label for="email">@Localizer["EmailLabel"]</label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp" />
                    <small id="emailHelp" class="form-text text-muted">@Localizer["EmailHelp"]</small>
                </div>
                <div class="form-group">
                    <label for="fullname">@Localizer["FullNameLabel"]</label>
                    <input type="text" class="form-control" id="fullname" />
                </div>
                <div class="form-group">
                    <label for="message">@Localizer["MessageLabel"]</label>
                    <textarea id="message" rows="6" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">@Localizer["Send"]</button>
            </form>
        </div>
    </div>
    
</div>

